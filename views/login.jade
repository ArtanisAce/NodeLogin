extends layout

block content
  h1 Login
  p Login with your username and password
    form(name="login-form",action="/users/login", method="post")
        .form-group
            label Username
            input.form-control(type="text", name="username", placeholder="Username")
        .form-group
            label Password
            input.form-control(type="password", name="password", placeholder="Password")
        input.btn.btn-default(name='submit', type='submit', value='Login')                  